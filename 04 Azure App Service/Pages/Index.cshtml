@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
@*     <h3 class="display-4">This is List Of Books from Production</h3>
    <br/> *@
@*     @if(Model.IsBeta)
    {
        <h2 class="display-4">Feature flag is 'ON'</h2>
    }
    else
    {
        <h2 class="display-4">Feature flag is 'OFF''</h2>
    } *@

    <br/>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Book Cover</th>
                <th scope="col">Book Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var books in Model.Books)
            {
                <tr>
                    <td scope="row"><img src=@books.ImgUrl alt="" /></td>
                    <td scope="row" align="left" valign="middle">
                        <ul>
                            <li><b>Book ID : </b> @books.BookId</li>
                            <li><b>Title : </b>@books.Title</li>
                            <li><b>Author : </b>@books.Author</li>
                            <li><b>Genere : </b>@books.Genere</li>
                            <li><b>Is Fiction ? : </b>@books.IsFiction</li>
                            <li><b>Cost : </b>@books.Price</li>
                            <li><b>Published On : </b>@books.PublishedDate</li>
                        </ul>
                </tr>
            }
        </tbody>
    </table>
</div>

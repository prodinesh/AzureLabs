@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <h3 class="display-4">This is List Of Books from Production</h3>
    <br/>
@*     @if(Model.IsBeta)
    {
        <h2 class="display-4">Feature flag is 'ON'</h2>
    }
    else
    {
        <h2 class="display-4">Feature flag is 'OFF''</h2>
    } *@

    <br/>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Book ID</th>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Genere</th>
                <th scope="col">Is Fiction ?</th>
                <th scope="col">Price</th>
                <th scope="col">Published On</th>
                <th scope="col">Book Cover</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var books in Model.Books)
            {
                <tr>
                    <th scope="row">@books.BookId</th>
                    <td scope="row">@books.Title</td>
                    <td scope="row">@books.Author</td>
                    <td scope="row">@books.Genere</td>
                    <td scope="row">@books.IsFiction</td>
                    <td scope="row">@books.Price</td>
                    <td scope="row">@books.PublishedDate</td>
                    <td scope="row"><img src=@books.ImgUrl alt=""/></td>
                </tr>
            }
        </tbody>
    </table>
</div>
